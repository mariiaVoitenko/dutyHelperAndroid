<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="7dp"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="7">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="NAMENAMENAME"
            android:textColor="#4a4a4a"
            android:textSize="24sp"
            android:layout_weight="3"></TextView>

        <TextView
            android:id="@+id/date_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATEDATEDATE"
            android:padding="5dp"
            android:textColor="#4a4a4a"
            android:textSize="12sp"
            android:layout_weight="2"></TextView>

        <TextView
            android:id="@+id/date_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE2DATE2DATE"
            android:textColor="#4a4a4a"
            android:textSize="12sp"
            android:layout_weight="2"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="DESCRIPTIONDESCRIPTION"
            android:textColor="#4a4a4a"
            android:textSize="16sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            android:id="@+id/categoty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CATEGORYCATEGORY"
            android:textColor="#4a4a4a"
            android:textSize="12sp"
            android:layout_weight="2"></TextView>

        <TextView
            android:id="@+id/priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:padding="5dp"
            android:paddingLeft="5dp"
            android:text="PRIORITYPRIORITY"
            android:textColor="#4a4a4a"
            android:textSize="12sp"
            android:layout_weight="2"></TextView>
        <TextView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONEDONEDONE"
            android:textColor="#4a4a4a"
            android:textSize="12sp"
            android:layout_weight="1"></TextView>
    </LinearLayout>
</LinearLayout>